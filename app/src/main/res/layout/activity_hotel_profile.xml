<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Hotel.HotelProfile"
    android:background="#3F3F3F">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/BackgroundLight">

            <ImageView
                android:id="@+id/ImageView_HotelImage"
                android:layout_width="match_parent"
                android:layout_margin="2dp"
                android:layout_height="wrap_content"
                tools:srcCompat="@tools:sample/avatars"/>
            <TextView
                android:background="#1F1F1F"
                android:fontFamily="sans-serif-smallcaps"
                android:layout_margin="1dp"
                android:id="@+id/TextView_HotelName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:text="Hotel Name"/>
            <TextView
                android:background="#1F1F1F"
                android:fontFamily="sans-serif-thin"
                android:layout_margin="1dp"
                android:id="@+id/TextView_Address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:text="Hotel Address"/>
            <TextView
                android:background="#1F1F1F"
                android:fontFamily="sans-serif-thin"
                android:layout_margin="1dp"
                android:id="@+id/TextView_City"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:text="Hotel City"/>
            <TextView
                android:background="#1F1F1F"
                android:layout_margin="1dp"
                android:id="@+id/TextView_PhoneNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:text="Hotel PhoneNo"/>
            <TextView
                android:background="#1F1F1F"
                android:layout_margin="1dp"
                android:fontFamily="sans-serif-thin"
                android:id="@+id/TextView_Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:text="Hotel Description"/>
            <TextView
                android:background="#1F1F1F"
                android:layout_margin="1dp"
                android:fontFamily="sans-serif-thin"
                android:id="@+id/TextView_Rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:text="Hotel Rating"/>
            <TextView
                android:background="#1F1F1F"
                android:layout_margin="1dp"
                android:id="@+id/TextView_Pricing"
                android:layout_width="match_parent"
                android:fontFamily="sans-serif-thin"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:text="Hotel Pricing"/>
            <TextView
                android:background="#1F1F1F"
                android:layout_margin="1dp"
                android:id="@+id/TextView_Tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:fontFamily="sans-serif-thin"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:text="Hotel Tags"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Make Booking"
                android:layout_margin="1dp"
                android:backgroundTint="@color/ButtonColourDark"
                android:id="@+id/Button_MakeBooking"/>
        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:id="@+id/Bottom_Bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.00001"
        android:background="@color/black"
        android:layout_gravity="bottom">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:id="@+id/ImageView_Back"
            android:background="#000000"
            android:backgroundTint="@color/BackgroundDark"
            android:fontFamily="casual"
            android:text="b1"
            android:src="@drawable/back_arrow_icon"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="#000000"
            android:id="@+id/ImageView_Call"
            android:backgroundTint="@color/BackgroundDark"
            android:fontFamily="casual"
            android:text="b1"
            android:src="@drawable/call_icon"/>

    </LinearLayout>

</LinearLayout>